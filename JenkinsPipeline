pipeline {
    agent any

    environment {
        MAVEN_HOME = 'C:\\Users\\shahnawaz_nagarchi\\Downloads\\apache-maven-3.9.9-bin'
        JAVA_HOME = 'C:\\Users\\shahnawaz_nagarchi\\Downloads\\jdk-17.0.12_windows-x64_bin\\jdk-17.0.12'
        PATH = "${env.PATH};${MAVEN_HOME}\\bin;${JAVA_HOME}\\bin"
    }

    stages {
        stage('Check Environment') {
            steps {
                echo 'Printing PATH for debugging:'
                bat 'echo %PATH%'
                echo 'Checking Maven version for debugging:'
                bat 'mvn --version'
            }
        }

        stage('Clone Repository') {
            steps {
                echo 'Cloning Git repository...'
                git branch: 'master', url: 'https://github.com/Shahnawaz0033/SeleniumJenkinsProject.git'
            }
        }

        stage('Run Tests with Maven') {
            steps {
                echo 'Running tests using Maven Surefire Plugin...'
                bat 'mvn clean test'
            }
        }

        stage('Archive Test Results') {
            steps {
                echo 'Archiving test results...'
                archiveArtifacts artifacts: 'target/surefire-reports/**/*.xml, target/surefire-reports/**/*.html', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Publishing test results...'
            junit 'target/surefire-reports/*.xml'
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}