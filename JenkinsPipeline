pipeline {
    agent any

    environment {
        MAVEN_HOME = 'C:\\Users\\shahnawaz_nagarchi\\Downloads\\apache-maven-3.9.9-bin'       // Path to Maven installation
        JAVA_HOME = 'C:\\Users\\shahnawaz_nagarchi\\Downloads\\jdk-17.0.12_windows-x64_bin\\jdk-17.0.12'         // Path to Java installation
        PATH = "${env.PATH};${MAVEN_HOME}\\bin;${JAVA_HOME}\\bin" // Add Maven and Java to PATH
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning Git repository...'
                git branch: 'master', url: 'https://github.com/Shahnawaz0033/SeleniumJenkinsProject.git'
            }
        }

        stage('Run Tests with Maven') {
            steps {
                echo 'Running tests using Maven Surefire Plugin...'
                // Since Maven is already configured with TestNG in the pom.xml, this command will work
                bat 'mvn clean test'
            }
        }

        stage('Archive Test Results') {
            steps {
                echo 'Archiving test results...'
                // Save Surefire results (XML and HTML files) for reviewing later
                archiveArtifacts artifacts: 'target/surefire-reports/**/*.html, target/surefire-reports/**/*.xml', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Publishing test results...'
            junit 'target/surefire-reports/*.xml' // Publish Surefire Plugin results in Jenkins
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}