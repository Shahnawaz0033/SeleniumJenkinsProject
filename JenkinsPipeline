pipeline {
    agent any

    parameters {
        choice(
            name: 'TESTNG_FILE',
            choices: ['testng.xml', 'testng2.xml', 'ALL_TESTS'],
            description: 'Select the TestNG XML file to run'
        )
    }

    stages {
        stage('Check Environment') {
            steps {
                echo 'Printing PATH for debugging:'
                bat 'echo %PATH%'
                echo 'Checking Maven version for debugging:'
                bat 'mvn --version'
            }
        }

        stage('Clone Repository') {
            steps {
                echo 'Cloning Git repository...'
                git branch: 'master', url: 'https://github.com/Shahnawaz0033/SeleniumJenkinsProject.git'
            }
        }

        stage('Run Tests with Maven') {
            steps {
                echo 'Running tests using Maven Surefire Plugin...'
                  script {
                           if (params.TESTNG_FILE == 'ALL_TESTS') {
                                       // Find all XML files in 'src/test/resources/' and join them with commas
                                       def xmlFiles = findFiles(glob: 'src/test/resources/*.xml')
                                                      .collect { it.path }
                                                      .join(',')
                                       echo "Running ALL TestNG XML files: ${xmlFiles}"
                                       bat "mvn clean test -DsuiteXmlFile=${xmlFiles}" // Pass all XML files as a comma-separated list
                                   } else {
                                       echo "Running tests with TestNG file: ${params.TESTNG_FILE}"
                                       bat "mvn clean test -DsuiteXmlFile=src/test/resources/${params.TESTNG_FILE}" // Pass specific XML file
                                   }
                   }
            }
        }

        stage('Archive Test Results') {
            steps {
                echo 'Archiving test results...'
                archiveArtifacts artifacts: 'target/surefire-reports/**/*.xml, target/surefire-reports/**/*.html', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Publishing test results...'
            junit 'target/surefire-reports/*.xml'
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}